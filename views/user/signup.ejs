<% layout("/layout/boilerplate.ejs") %>

<style>
    .btn:hover{
        background-color: #087122;
        color: #fff;
    }
    .dropdown :hover{
      background-color: #087122;
      color: #fff;
    }
    .dropdown{
      padding-top: 32px;
    }
    .inner{
      display: flex;
      justify-content: space-between;
    }
</style>

<div class="row mt-3">
<div class="col-6 offset-3 ">
    <h1>SignUp on AgriMart</h1>
<form action="/user/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Username:</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="username" required>
      <div class="invalid-feedback">Please enter username</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email:</label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email" required>
        <div class="invalid-feedback">Please enter Email</div>
      </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password:</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
      <div class="invalid-feedback">Please enter password</div>
    </div>
    <div class="inner">
    <div class="mb-3 col-7">
      <label for="exampleInputPassword1" class="form-label">city:</label>
      <input type="text" class="form-control" id="exampleInputPassword1" name="location" required>
      <div class="invalid-feedback">Please enter Location</div>
    </div>
    <div class="mb-3 col-5">
    <label for="role" class="form-label">Choose who you are:</label>
    <select class="form-control" id="role" name="category" required>
      <option value="">Select</option>
      <option value="Farmer">Farmer</option>
      <option value="Buyer">Buyer</option>
    </select>
  </div><br>
  </div>
    <button class="btn btn-outline-success">Submit</button>
  </form>
  <a href="/auth/google" >SignUp with google</a>
</div>
</div>

